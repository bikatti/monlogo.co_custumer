mixin boxCourse(a="#", img, n, title="Curso de ...", d, texto="Hey!! aqui va descripción")
 a(class="m-box -course m-box__anima", href=""+a)
  .m-box__containerImg
   img(class="a-course__img", src=linksUrl[1]+img, alt="Curso de "+n)
  .m-box__container
   h3.m-box__title=title
   .m-box__profile
     .a-arrowWierd
     p=d
   p.a-box__text=texto

mixin mailChimp(f="", b="", m="", btnMail="-btnEmail")
 // Begin Mailchimp Signup Form
 .m-heroContent__form#mc_embed_signup
  form(action="https://monlogo.us10.list-manage.com/subscribe/post?u=c00182333b9094ee16959a0c6&amp;id=d616c3f0d8", method="post", id="mc-embedded-subscribe-form", name="mc-embedded-subscribe-form", class="validate", target="_blank", novalidate)
   div(class="a-mailChimp__form "+f)#mc_embed_signup_scroll
    div(class="a-mailchimpGroup mc-field-group "+b)
     input(type="email", placeholder="Escribe tu email aquí", value="", name="EMAIL", class="required email a-mailchimpMail "+m, id="mce-EMAIL")
    .clear#mce-responses
     div(class="response", id="mce-error-response", style="display:none")
     div(div class="response", id="mce-success-response", style="display:none")
    div(style="position: absolute; left: -5000px;", aria-hidden="true")
     input(type="text", name="b_c00182333b9094ee16959a0c6_d616c3f0d8", tabindex="-1", value="")
    .clear.a-btn
     input(type="submit", value="Enviar", name="subscribe", id="mc-embedded-subscribe", class="button "+btnMail)


