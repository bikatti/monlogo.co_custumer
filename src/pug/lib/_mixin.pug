//- Contenido del index
mixin boxCourse(a="#", img, n, title="Curso de ...", d, texto="Hey!! aqui va descripción")
 a(class="m-box -course m-box__anima", href=""+a)
  .m-box__containerImg
   img(class="a-course__img", src=linksUrl[1]+img, alt=""+n)
  .m-box__container
   h3.m-box__title=title
   .m-box__profile
     .a-arrowWierd
     p=d
   p.a-box__text=texto

mixin pack__hero(title, sub, img, w)
 .m-pack__hero
  .m-pack__title
   h3.a-textAndImg__title=title
   .m-textAndImg__subtitle.-padSmBottom
    .a-arrowWierd
    span.a-textAndImg__subtitleText=sub
  div(class="m-pack__img "+w)
   img(src=linksUrl[1]+img, alt="icono "+title)

